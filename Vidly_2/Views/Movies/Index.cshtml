@model List<Vidly_2.Models.Movie>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Movies</h2>
<hr />

@{
    if (Model.Count == 0)
    {
        <p>We Don't Have Any Movies Yet.</p>
    }
    else
    {
        <table class="table table-striped">
            <caption>I am the Caption....</caption>
            <tr>
                <th>Name</th>
                <th>Genre</th>
            </tr>
            @foreach (var movie in Model)
            {
            <tr>
                <td>@Html.ActionLink(movie.Name, "MovieDetails", new {id=movie.Id })</td>
                <td>@movie.Genre.Name</td>
            </tr>
            }
        </table>
    }
}

